<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - upcycleshop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/upcycleshop.styles.css" asp-append-version="true" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/index.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <script src="~/js/jetanim.js"></script>
    <link href="~/css/hover-min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Secular+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/fontawesome.min.css" />
    <link href="~/css/feminino.css" rel="stylesheet" />
    <script src="~/js/feminino.js"></script>
</head>
<link href="~/css/bootstrap.css" rel="stylesheet" />
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="color:black;">

            <div class="container-fluid">
                <div id="mylogo" class="mx-5"><img src="~/img/xdd.png" width="100" height="100" /></div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto" id="headcsstxt">
                        <li class="nav-item">
                            <a class="nav-link active mx-3 hvr-bob" href="#">
                                Inicio
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Feminino" asp-controller="Home" class="nav-link mx-5 hvr-bob">Feminino</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-5 hvr-bob" href="#">Masculino</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-5 hvr-bob" href="#">Infantil</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link hvr-bob dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Bazar</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Acessorios</a>
                                <a class="dropdown-item" href="#">Sapatos</a>
                            </div>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <a asp-action="Index" asp-controller="Home" class="" id="cart"><img src="~/img/shopping-cart.png" width="60px" height="60px" class="hvr-buzz" /></a>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - UPCYCLE Bazar & Boutique - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
